{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR\\output",
    "$STIM_DIR":"$BASE_DIR/components/stimulation"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 2300.0,
    "dt": 0.025,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 1000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -96.0
  },
  "inputs": {
    "Extracellular_Stim": {
    "input_type": "lfp",
    "node_set": "all",
    "module": "comsol",
    "comsol_files": ["$STIM_DIR/comsol/electrode_1_small.txt","$STIM_DIR/comsol/electrode_2_small.txt"],
    "waveforms": ["$STIM_DIR/waveforms/waveform_pause_2s.csv","$STIM_DIR/waveforms/waveform_pause_2s.csv"],
    "amplitudes": [20,-20],
    "enabled": true
    
  }
},
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5",
    "spikes_file_csv": "spikes.csv"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": ["soma","axon"]
    },
    "extracellular": {
      "cells": "all",
      "variable_name": "e_extracellular",
      "module": "membrane_report",
      "file_name": "e_report.h5",
      "sections": "all",
      "enabled": true
    }
  },
  "node_sets_file": "node_sets.json"
}