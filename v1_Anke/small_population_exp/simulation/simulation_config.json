{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR\\output",
    "$NETWORK_DIR":"Users/ankev/Documents/Github/neural_simulation/v1_Anke/small_population_exp/network_mask",
    "$STIM_DIR":"Users/ankev/Documents/Github/neural_simulation/v1_Anke/small_population_exp/components/stimulation"
  },
  "target_simulator": "NEURON",

  "run": {
    "tstart": 0.0,
    "tstop": 2000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
  "inputs": {
    "Extracellular_Stim": {
    "input_type": "lfp",
    "node_set": "all",
    "module": "comsol",
    "comsol_file": ["$STIM_DIR/comsol/electrode_1","$STIM_DIR/comsol/electrode_2"],
    "waveform": "$STIM_DIR/waveform.csv",
    "amplitude": 10,
    "ip_method": "L"
  }
},

  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {},
  "node_sets_file": "$BASE_DIR\\node_sets.json"
}